server {
    listen 80;
    server_name _;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
        proxy_pass http://django:8000;
    }

    location /django-static/ {
        alias /code/static/;
    }

    location /django-media/ {
        alias /code/media/;
    }
}
